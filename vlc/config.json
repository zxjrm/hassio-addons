{
    "name": "VLC",
    "version": "0.01",
    "slug": "vlc",
    "description": "VLC播放器",
    "url": "https://github.com/zxjrm/hassio-addons/tree/master/vlc",
    "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
    "startup": "services",
    "boot": "auto",
    "audio": true,
    "video": true,
    "host_dbus": true,
    "options": {
        "telnet_password": "mypassword",
        "http_password": "mypassword"
    },    
    "schema": {
        "telnet_password": "str",
        "http_password": "str"
    },
    "ports":{
        "6600/tcp":6600,
        "9892/tcp":9892,
        "4212/tcp":4212
    },
    "webui": "http://[HOST]:[PORT:9892]/",
    "map": ["share:ro", "ssl"],
    "image": "zxjrm/vlc-{arch}"
  }