#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: motionEye
# Runs the motionEye
# ==============================================================================
declare -a options


bashio::log.info "Starting motionEye..."

options+=(-c /data/motioneye/motioneye.conf)

# Enable debug mode
if bashio::debug; then
    options+=(-d)
fi

# Run the motionEye
exec meyectl startserver "${options[@]}"
